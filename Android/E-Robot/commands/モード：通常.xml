<?xml version='1.0' encoding='UTF-8' ?>
<command>
  <action type="screen_brightness" enabled="true">
    <param name="percent" type="expression">
      <expression type="integer">
        <param name="value" type="int">3</param>
      </expression>
    </param>
  </action>
  <action type="volume" enabled="true">
    <param name="stream" type="strings">
      <item>notification</item>
    </param>
    <param name="percent" type="expression">
      <expression type="integer">
        <param name="value" type="int">30</param>
      </expression>
    </param>
  </action>
  <action type="volume" enabled="true">
    <param name="stream" type="strings">
      <item>media</item>
    </param>
    <param name="percent" type="expression">
      <expression type="integer">
        <param name="value" type="int">25</param>
      </expression>
    </param>
  </action>
  <action type="volume" enabled="true">
    <param name="stream" type="strings">
      <item>alarm</item>
    </param>
    <param name="percent" type="expression">
      <expression type="integer">
        <param name="value" type="int">45</param>
      </expression>
    </param>
  </action>
  <action type="set_variable" enabled="true">
    <param name="name" type="string">audio_mode</param>
    <param name="value" type="expression">
      <expression type="string">
        <param name="value" type="string">normal</param>
      </expression>
    </param>
  </action>
  <action type="hide_screen_filter" enabled="true" />
</command>