<?xml version='1.0' encoding='UTF-8' ?>
<command>
  <action type="volume" enabled="true">
    <param name="stream" type="strings">
      <item>notification</item>
    </param>
    <param name="percent" type="expression">
      <expression type="integer">
        <param name="value" type="int">10</param>
      </expression>
    </param>
  </action>
  <action type="volume" enabled="true">
    <param name="stream" type="strings">
      <item>media</item>
    </param>
    <param name="percent" type="expression">
      <expression type="integer">
        <param name="value" type="int">5</param>
      </expression>
    </param>
  </action>
  <action type="volume" enabled="true">
    <param name="stream" type="strings">
      <item>alarm</item>
    </param>
    <param name="percent" type="expression">
      <expression type="integer">
        <param name="value" type="int">45</param>
      </expression>
    </param>
  </action>
  <action type="set_variable" enabled="true">
    <param name="name" type="string">audio_mode</param>
    <param name="value" type="expression">
      <expression type="string">
        <param name="value" type="string">quiet</param>
      </expression>
    </param>
  </action>
  <action type="screen_brightness" enabled="true">
    <param name="percent" type="expression">
      <expression type="double">
        <param name="value" type="double">0.0</param>
      </expression>
    </param>
  </action>
</command>