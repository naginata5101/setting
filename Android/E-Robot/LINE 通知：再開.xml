      <expression type="string">
        <param name="value" type="string">LINE 通知</param>
      </expression>
    </param>
    <param name="text" type="expression">
      <expression type="string">
        <param name="value" type="string">再開</param>
      </expression>
    </param>
    <param name="ticker" type="expression">
      <expression type="string">
        <param name="value" type="string"></param>
      </expression>
    </param>
    <param name="led_color" type="int">0</param>
    <param name="led_on" type="int">500</param>
    <param name="led_off" type="int">1000</param>
    <param name="use" type="strings" />
    <param name="flags" type="strings" />
    <param name="priority" type="string">default</param>
  </action>
</command>