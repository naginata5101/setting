<?xml version='1.0' encoding='UTF-8' ?>
<command>
  <event type="notification_created" enabled="true">
    <param name="package" type="string">jp.naver.line.android</param>
    <param name="ticker" type="string"></param>
    <param name="hasTicker" type="boolean">false</param>
    <condition type="or">
      <param name="expressions" type="list">
        <item type="expression">
          <expression type="variable">
            <param name="name" type="expression">
              <expression type="string">
                <param name="value" type="string">checkLINE</param>
              </expression>
            </param>
          </expression>
        </item>
        <item type="expression">
          <expression type="empty">
            <param name="expression" type="expression">
              <expression type="variable">
                <param name="name" type="expression">
                  <expression type="string">
                    <param name="value" type="string">checkLINE</param>
                  </expression>
                </param>
              </expression>
            </param>
          </expression>
        </item>
      </param>
    </condition>
  </event>
  <action type="block" enabled="true">
    <param name="actions" type="list">
      <item type="action">
        <action type="play_default_sound" enabled="true">
          <param name="type" type="string">2</param>
        </action>
      </item>
      <item type="action">
        <action type="vibrate" enabled="true">
          <param name="pattern" type="string">0 150 150 250</param>
        </action>
      </item>
    </param>
  </action>
  <action type="set_variable" enabled="true">
    <param name="name" type="string">checkLINE</param>
    <param name="value" type="expression">
      <expression type="boolean">
        <param name="value" type="boolean">false</param>
      </expression>
    </param>
  </action>
  <action type="wait" enabled="true">
    <param name="time" type="expression">
      <expression type="integer">
        <param name="value" type="int">60000</param>
      </expression>
    </param>
    <param name="while" type="expression">
      <expression type="null" />
    </param>
    <param name="maxChecks" type="int">0</param>
    <param name="wakeLock" type="boolean">false</param>
  </action>
  <action type="notification" enabled="false">
    <param name="id" type="int">-1</param>
    <param name="title" type="expression">
      <expression type="string">
        <param name="value" type="string">LINE 通知</param>
      </expression>
    </param>
    <param name="text" type="expression">
      <expression type="variable">
        <param name="name" type="expression">
          <expression type="string">
            <param name="value" type="string">抑制開始</param>
          </expression>
        </param>
      </expression>
    </param>
    <param name="ticker" type="expression">
      <expression type="string">
        <param name="value" type="string"></param>
      </expression>
    </param>
    <param name="led_color" type="int">0</param>
    <param name="led_on" type="int">500</param>
    <param name="led_off" type="int">1000</param>
    <param name="use" type="strings" />
    <param name="flags" type="strings" />
    <param name="priority" type="string">default</param>
  </action>
  <action type="set_variable" enabled="true">
    <param name="name" type="string">checkLINE</param>
    <param name="value" type="expression">
      <expression type="boolean">
        <param name="value" type="boolean">true</param>
      </expression>
    </param>
  </action>
  <action type="notification" enabled="false">
    <param name="id" type="int">-1</param>
    <param name="title" type="expression">
      <expression type="string">
        <param name="value" type="string">LINE 通知</param>
      </expression>
    </param>
    <param name="text" type="expression">
      <expression type="variable">
        <param name="name" type="expression">
          <expression type="string">
            <param name="value" type="string">抑制終了</param>
          </expression>
        </param>
      </expression>
    </param>
    <param name="ticker" type="expression">
      <expression type="string">
        <param name="value" type="string"></param>
      </expression>
    </param>
    <param name="led_color" type="int">0</param>
    <param name="led_on" type="int">500</param>
    <param name="led_off" type="int">1000</param>
    <param name="use" type="strings" />
    <param name="flags" type="strings" />
    <param name="priority" type="string">default</param>
  </action>
</command>